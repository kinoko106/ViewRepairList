<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControlTest"
        xmlns:ViewRepairList="clr-namespace:ViewRepairList;assembly=ViewRepairList" 
        x:Class="CustomControlTest.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Background="{DynamicResource ThemeBrushKey}"
        Foreground="{DynamicResource ActiveForegroundBrushKey}">
    <Grid >
        <ViewRepairList:RepairList/>
        <TextBlock x:Name="textblock1" Text="{Binding text1}" Width="200" Height="100" />
    </Grid>
</Window>